{
  "name": "awesome-time",
  "version": "1.0.0",
  "description": "A modern, accessible, and internationalized relative time formatting library for React, Vue, and Angular.",
  "main": "./dist/core/index.js",
  "types": "./dist/core/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js",
      "require": "./dist/core/index.cjs"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js",
      "require": "./dist/react/index.cjs"
    },
    "./vue": {
      "types": "./dist/vue/index.d.ts",
      "import": "./dist/vue/index.js",
      "require": "./dist/vue/index.cjs"
    },
    "./angular": {
      "types": "./dist/angular/index.d.ts",
      "import": "./dist/angular/index.js",
      "require": "./dist/angular/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && tsc -p tsconfig.cjs.json",
    "test": "jest",
    "test:vue": "vitest run test/vue.test.ts",
    "test:angular": "jest test/angular.test.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "keywords": [
    "time",
    "relative-time",
    "formatting",
    "internationalization",
    "react",
    "vue",
    "angular"
  ],
  "author": "alyson farias",
  "license": "MIT",
  "peerDependencies": {
    "@angular/core": "^17.0.0",
    "react": "^18.0.0",
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@size-limit/preset-small-lib": "^11.0.0",
    "@storybook/react": "^9.0.2",
    "@storybook/react-vite": "^9.0.2",
    "@storybook/test": "^8.6.14",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/compiler-sfc": "^3.3.0",
    "@vue/runtime-core": "^3.5.16",
    "@vue/test-utils": "^2.4.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.0.0",
    "jest": "^29.0.0",
    "jest-axe": "^7.0.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.0.0",
    "size-limit": "^11.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "directories": {
    "test": "test"
  },
  "size-limit": [
    {
      "path": "dist/core/index.js",
      "limit": "2 kB"
    },
    {
      "path": "dist/react/index.js",
      "limit": "3 kB"
    },
    {
      "path": "dist/vue/index.js",
      "limit": "3 kB"
    },
    {
      "path": "dist/angular/index.js",
      "limit": "3 kB"
    }
  ]
}
